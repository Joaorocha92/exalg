public class Exalgaula07 {
    //Faça um programa que mostre os números pares entre 1 e 100, inclusive. Use o laço while

    public static void main(String[] args) {
       int n=2;
       while(n<100){
           System.out.println("O número é par"+n);
           n = n + 2;
           
       }
        
    }
    
}
