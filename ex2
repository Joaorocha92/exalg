 public static void main(String[] args) {
        Scanner leia = new Scanner (System.in);
        int n;
        int soma=0,resultado=0,num=0;
        
        System.out.println("Digite n1: ");
        n = leia.nextInt();
        

        while(num < n){  
            
          soma = soma + 1;
          
          resultado = resultado+soma;  
        
          num = num+1;
            
        }
        System.out.print("Resultado: "+resultado);
    }
    
}
